@model IEnumerable<CommentOutputModel>
@{

    int count = 0;
}

<div class="container  col-md-12  table-responsive" style="background: #007b5e">

    <table class="table table-bordered table-hover" id="dataFromDb4">
        <thead class="thead-dark">
            <tr>
                <th scope="col" class="text-center">#</th>
                <th scope="col" class="text-center">Title</th>
                <th scope="col" class="text-center">Genre</th>
                <th scope="col" class="text-center">Author</th>
            </tr>
        </thead>
        <tbody class="text-white" >
            @foreach (var m in Model)
            {

                {
                    count++;
                }
                <tr>
                    <th scope="row" class="text-center">@count</th>
                    <td class="text-center">@m.Message</td>
                    <td class="text-center">@m.CommentedOn</td>

                    <td>
                        <div class=" d-flex justify-content-around ">
                            <a class="btn btn-danger js-delete" data-customer-id="@m.Id">Delete</a>

                            <a asp-action="Details" asp-controller="Stories" asp-area="" asp-route-id="@m.Id" class="btn btn-dark ">Details</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{

    @{ await Html.RenderPartialAsync("_MyScriptsPartial"); }
    <script>
        $(document).ready(function () {
            $('#dataFromDb4').DataTable({ responsive: true });
        });
    </script>
}
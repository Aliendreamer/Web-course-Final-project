@model ChapterInputModel

<div class=" card col-md-12 w-100 mt-3" style="border: 1px solid black" method="post">
    <form asp-controller="Stories" asp-action="AddChapter" asp-area="">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Author" type="hidden" class="form-control text-center" value="@User.Identity.Name" />
            <input asp-for="CreatedOn" type="hidden" class="form-control text-center" value="@DateTime.UtcNow" />
            <input asp-for="StoryId" type="hidden" class="form-control text-center" value="@Model.StoryId" />
        </div>
        <div class="form-group text-center" style="max-height: 300px; overflow-y:auto ">
            <label class="control-label text-center">Add chapter</label>
            <textarea asp-for="Content" class="form-control" id="editor" rows="10"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 text-center">
            <input type="submit" value="Create" style="align-content: center" class="btn btn-info" />
        </div>
    </form>
</div>

@section scripts{

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    @{ await Html.RenderPartialAsync("_MyScriptsPartial"); }

}
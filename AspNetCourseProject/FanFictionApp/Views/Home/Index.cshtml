@{
    ViewData["Title"] = "Home Page";
}

<div class="row container-fluid col-md-12 mt-5">

    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" style="min-height: 500px">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/images/game-of-thrones-house-banner2.jpg" alt="Game of Thrones">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Share your dreams</h5>
                    <p>Find your voice!</p>
                </div>
            </div>
            <div class="carousel-item w-100">
                <img class="d-block" src="~/images/lord-of-the-rings-tv-show2.jpg" alt="Lord Of the Rings">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Share your dreams</h5>
                    <p>Find your voice!</p>
                </div>
            </div>
            <div class="carousel-item">
                <img class="d-block w-100"src="~/images/lotrwallpaper.jpg" alt="Nazgul">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Share your dreams</h5>
                    <p>Find your voice!</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
@section scripts{

   
    @{ await Html.RenderPartialAsync("_MyScriptsPartial"); }
}